<script>
    function addDocument(id) {
        var url = window.location.protocol + "//" + window.location.host + '/Document/Create?id=' + id;
        location.href = url;
    }
    function deleteDocument(id) {
        if (confirm("Bạn có chắc muốn xóa bài học con này!") == true) {
            $.ajax({
                url: "/Document/DeleteDocument",
                type: "Post",
                data: { id: id },
                success: function (result) {
                    if (result.data) {
                        var url = window.location.protocol + "//" + window.location.host + '/Document/Index';
                        location.href = url;
                    }
                }
            });
        }
    }
</script>

<div class="col-md-12" style="margin-top: 10px">
    <table>
        <tr>
            <td width="70%"><span style="font-size: 20px; font-weight: 600">Danh sách bài học con</span></td>
            <td>
                <div class="input-group mb-3">
                    <button class="btn btn-primary" onclick="addDocument(0)">Thêm mới <i class="fa fa-plus" aria-hidden="true"></i></button> &emsp;
                    <input type="text" class="form-control" placeholder="search document" aria-label="Recipient's username" aria-describedby="button-addon2">
                    <button class="btn btn-outline-secondary" type="button" id="button-addon2"><i class="fa fa-search" aria-hidden="true"></i></button>
                </div>
            </td>
        </tr>
    </table>
    <hr />
    <div>
        <table>
            <tr>
                <td><b>Page</b></td>
                <td>
                    <select class="form-control" id="pading-list">
                        <option selected value="10">10</option>
                        <option value="50">50</option>
                        <option value="100">100</option>
                        <option value="-1">ALL</option>
                    </select>
                </td>
            </tr>
        </table>
        <table class="table table-bordered">
            <tr>
                <th>STT</th>
                <th>Title</th>
                <th>LinkImage</th>
                <th>LinkAudio</th>
                <th>#</th>
            </tr>


            @foreach (var i in ViewBag.lst)
            {

                <tr>
                    <td>@i.Order</td>
                    <td>@i.Title</td>
                    <td>@i.Image</td>
                    <td>@i.Audio</td>
                    <td>
                        <span class="btn btn-link" onclick="addDocument(@i.Id)" title="Edit info"><i class="fa fa-pencil" aria-hidden="true"></i></span>
                        <span class="btn btn-link" title="Detail"><i class="fa fa-info" aria-hidden="true"></i></span>
                        <span class="btn text-danger" onclick="deleteDocument(@i.Id)"><i class="fa fa-trash" aria-hidden="true"></i></span>
                    </td>
                </tr>
            }
        </table>

    </div>
</div>
