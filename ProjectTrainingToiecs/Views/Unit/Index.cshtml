@{
    var order = 0;
}
<script>
    function addUnit(id) {
        var url = window.location.protocol + "//" + window.location.host + '/Unit/Create?id=' + id;
        location.href = url;
    }
</script>

<div class="container">
    <div class="row">
        <div col-md-12>
            <label class="control-label align-content-center">Danh sách bài học</label>
            <div>
                <button class="btn btn-primary" onclick="addUnit(0)">Thêm mới</button>
                <table class="table table-bordered">
                    <tr>
                        <th>STT</th>
                        <th>Name</th>
                        <th>Type</th>
                        <th>Description</th>
                        <th>#</th>
                    </tr>


                    @foreach (var i in ViewBag.lst)
                    {

                        <tr>
                            <td>@i.Order</td>
                            <td>@i.Name</td>
                            <td>@i.Type</td>
                            <td>@i.Description</td>
                            <td>
                                <span onclick="addUnit(@i.Id)">Sửa</span>
                                <span>Chi tiết</span>
                            </td>
                        </tr>
                    }
                </table>

            </div>
        </div>
    </div>

</div>
