@model IEnumerable<ProjectTrainingToiecs.Models.Users>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.6.9/angular.min.js" />
<script src="~/js/account/admin-controller.js"></script>
<div class="container"ng-controller="admin_controller">
   
</div>
<div class="container">
    <div class="row">
        <div col-md-12>
            <label class="control-label align-content-center">Danh sách người dùng</label>
            <div>
                <table class="table table-bordered">
                    <tr>
                        <th>STT</th>
                        <th>Username</th
                        <th>Fullname</th>
                        <th>Email</th>
                        <th>Active</th>
                        <th>#</th>
                    </tr>


                    @foreach (var i in ViewBag.lst)
                    {

                        <tr>
                            <td>@i.Order</td>
                            <td>@i.UserName</td>
                            <td>@i.FullName</td>
                            <td>@i.Email</td>
                            <td>@i.ActiveTxt</td>
                            <td>
                                <span onclick="Update(@i.Id)">Sửa</span>
                                <span>Chi tiết</span>
                            </td>
                        </tr>
                    }
                </table>

            </div>
        </div>
    </div>
</html>
